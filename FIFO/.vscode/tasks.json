{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "FIFO: clang++ build",
			"command": "/usr/local/opt/llvm/bin/clang++",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"${workspaceFolder}/queue.cpp",
				"-o",
				"${workspaceFolder}/queue"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/local/opt/llvm/bin/clang++"
		},
		{
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/queue",
            "args": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
	]
}